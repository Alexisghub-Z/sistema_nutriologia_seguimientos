# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/nutriologo_db?schema=public"

# Docker Database Config (usado por docker-compose)
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=nutriologo_db
DB_PORT=5432

# ============================================
# NEXTAUTH / AUTHENTICATION
# ============================================
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="change-this-to-a-random-secret-key-in-production"

# ============================================
# REDIS / BULL QUEUE
# ============================================
REDIS_URL="redis://:redis123@localhost:6379"
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ============================================
# GOOGLE CALENDAR API
# ============================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# ============================================
# TWILIO WHATSAPP
# ============================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"
TWILIO_WEBHOOK_SECRET="your-webhook-secret"

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="10485760"
# 10MB en bytes

# ============================================
# APP CONFIGURATION
# ============================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_PORT=3000

