# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/nutriologo_db?schema=public"

# Docker Database Config (usado por docker-compose)
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=nutriologo_db
DB_PORT=5432

# ============================================
# NEXTAUTH / AUTHENTICATION
# ============================================
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="change-this-to-a-random-secret-key-in-production"

# ============================================
# REDIS / BULL QUEUE
# ============================================
REDIS_URL="redis://:redis123@localhost:6379"
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ============================================
# GOOGLE CALENDAR API
# ============================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# ============================================
# TWILIO WHATSAPP
# ============================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"
TWILIO_WEBHOOK_SECRET="your-webhook-secret"

# ============================================
# EMAIL NOTIFICATIONS (Gmail)
# ============================================
# Email del nutriólogo que recibirá las notificaciones
NUTRIOLOGO_EMAIL="nutriologo@example.com"

# Cuenta de Gmail para enviar emails (puede ser la misma que NUTRIOLOGO_EMAIL)
GMAIL_USER="tu-email@gmail.com"

# App Password de Gmail (NO tu contraseña normal)
# Generar en: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD="xxxx xxxx xxxx xxxx"

# ============================================
# PLANTILLAS APROBADAS DE META (Content SIDs)
# ============================================
# Configura como 'true' para usar plantillas aprobadas en producción
# Configura como 'false' para usar mensajes libres en sandbox
USE_APPROVED_TEMPLATES="false"

# Plantillas de citas (existentes)
TEMPLATE_CONFIRMACION_SID="HXxxxxxxxxxxxxxxxxx"
TEMPLATE_RECORDATORIO_24H_SID="HXxxxxxxxxxxxxxxxxx"
TEMPLATE_RECORDATORIO_1H_SID="HXxxxxxxxxxxxxxxxxx"
TEMPLATE_SEGUIMIENTO_SID="HXxxxxxxxxxxxxxxxxx"

# Nuevas plantillas de seguimiento post-consulta
TEMPLATE_SEGUIMIENTO_INICIAL_SID="HXxxxxxxxxxxxxxxxxx"
TEMPLATE_SEGUIMIENTO_INTERMEDIO_SID="HXxxxxxxxxxxxxxxxxx"
TEMPLATE_SEGUIMIENTO_PREVIO_CITA_SID="HXxxxxxxxxxxxxxxxxx"
TEMPLATE_RECORDATORIO_AGENDAR_SID="HXxxxxxxxxxxxxxxxxx"

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="10485760"
# 10MB en bytes

# ============================================
# OPENAI / IA ASSISTANT
# ============================================
# API Key de OpenAI (obtener en: https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxx"

# Modelo a usar (gpt-4o, gpt-4o-mini, gpt-4-turbo)
# Recomendado: gpt-4o para respuestas inteligentes
OPENAI_MODEL="gpt-4o"

# Temperatura (0.0-1.0): Mayor = más creativo, Menor = más predecible
OPENAI_TEMPERATURE="0.7"

# Máximo de tokens por respuesta (mayor = respuestas más largas)
OPENAI_MAX_TOKENS="500"

# Umbral de confianza (0.0-1.0): Mínimo para responder automáticamente
# Si la confianza es menor, deriva a humano
AI_CONFIDENCE_THRESHOLD="0.7"

# Habilitar/deshabilitar IA (true/false)
AI_ENABLED="true"

# ============================================
# APP CONFIGURATION
# ============================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_PORT=3000

